{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",                            
    "moduleResolution": "bundler",                
    "outDir": "./dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
